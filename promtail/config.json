{
  "name": "Promtail",
  "url": "https://github.com/Kubee-Addons/addon-promtail",
  "version": "0.1.1",
  "slug": "promtail",
  "arch": ["aarch64", "amd64", "armv7", "armhf"],
  "description": "Promtail for Home Assistant",
  "journald": true,
  "map": ["share", "ssl"],
  "watchdog": "http://[HOST]:[PORT:9080]/ready",
  "ports": {
    "9080/tcp": null
  },
  "ports_description": {
    "9080/tcp": "Promtail web server"
  },
  "discovery": ["promtail"],
  "options": {
    "client": {
      "url": "http://39bd2704-loki:3100/loki/api/v1/push"
    },
    "log_level": "info"
  },
  "schema": {
    "client": {
      "url": "str",
      "username": "str?",
      "password": "password?",
      "cafile": "str?",
      "servername": "str?",
      "certfile": "str?",
      "keyfile": "str?"
    },
    "additional_pipeline_stages": "str?",
    "additional_scrape_configs": "str?",
    "skip_default_scrape_config": "bool?",
    "log_level": "list(debug|info|warning|error)?"
  }
}
